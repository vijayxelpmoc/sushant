{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*":["./src/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false
  },
}
